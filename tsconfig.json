{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "target": "esnext",
    "pretty": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ],
    "outDir": "./lib",
    "declarationDir": "types"
  },
  "exclude": [
    "node_modules",
    "lib",
    ".docz",
    "types",
    "es"
  ]
}